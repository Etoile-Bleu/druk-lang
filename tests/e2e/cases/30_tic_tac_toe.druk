ལས་འགན་ སྟོན་(གྲངས་ board) {
    བཀོད་ board[༠][༠] + " " + board[༠][༡] + " " + board[༠][༢];
    བཀོད་ board[༡][༠] + " " + board[༡][༡] + " " + board[༡][༢];
    བཀོད་ board[༢][༠] + " " + board[༢][༡] + " " + board[༢][༢];
}

ལས་འགན་ རྒྱལ་(གྲངས་ board, གྲངས་ p) {
    // Horizontal
    གལ་སྲིད་ (board[༠][༠] == p && board[༠][༡] == p && board[༠][༢] == p) { སླར་ལོག་ བདེན་པ་; }
    གལ་སྲིད་ (board[༡][༠] == p && board[༡][༡] == p && board[༡][༢] == p) { སླར་ལོག་ བདེན་པ་; }
    གལ་སྲིད་ (board[༢][༠] == p && board[༢][༡] == p && board[༢][༢] == p) { སླར་ལོག་ བདེན་པ་; }
    // Vertical
    གལ་སྲིད་ (board[༠][༠] == p && board[༡][༠] == p && board[༢][༠] == p) { སླར་ལོག་ བདེན་པ་; }
    གལ་སྲིད་ (board[༠][༡] == p && board[༡][༡] == p && board[༢][༡] == p) { སླར་ལོག་ བདེན་པ་; }
    གལ་སྲིད་ (board[༠][༢] == p && board[༡][༢] == p && board[༢][༢] == p) { སླར་ལོག་ བདེན་པ་; }
    // Diagonal
    གལ་སྲིད་ (board[༠][༠] == p && board[༡][༡] == p && board[༢][༢] == p) { སླར་ལོག་ བདེན་པ་; }
    གལ་སྲིད་ (board[༠][༢] == p && board[༡][༡] == p && board[༢][༠] == p) { སླར་ལོག་ བདེན་པ་; }
    སླར་ལོག་ རྫུན་མ་;
}

གྲངས་ board = [[༠, ༠, ༠], [༠, ༠, ༠], [༠, ༠, ༠]];

བཀོད་ "Game Start";
board[༠][༠] = ༡; // X
board[༡][༡] = ༢; // O
board[༠][༡] = ༡; // X
board[༢][༡] = ༢; // O
board[༠][༢] = ༡; // X (Wins)

སྟོན་(board);

གལ་སྲིད་ (རྒྱལ་(board, ༡)) {
    བཀོད་ "Player X Wins!";
} མེད་ན་ {
    བཀོད་ "No Winner Yet";
}
